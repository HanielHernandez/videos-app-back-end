// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String
  password  String
  photoURL  String?
  videos    Video[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  subscribers Subscription[] @relation("subscribers")
  publishers  Subscription[] @relation("publishers")
}

model Subscription {
  subscriberId Int
  subscriber   User     @relation("subscribers", fields: [subscriberId], references: [id])
  publisherId  Int
  publisher    User     @relation("publishers", fields: [publisherId], references: [id])
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@id([subscriberId, publisherId])
}

model Video {
  id            Int      @id @default(autoincrement())
  url           String
  title         String
  description   String
  published     Boolean  @default(false)
  publishedBy   User?    @relation(fields: [publishedById], references: [id])
  publishedById Int?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}
